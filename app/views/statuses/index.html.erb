<h1>All of the Statuses</h1>
<div class="page-header">
  <h3>Default Statuses</h3>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%= status.content %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<hr>
  <h3>New Statuses</h3>

<%= link_to "Post of New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <p><strong><%= status.name %></strong> </p>
    <p><%= status.content %> </p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %> | 
      <span class="admin">
        <%= link_to 'Edit', edit_status_path(status) %> | 
      </span>
      <span class="admin">
        <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>
    
  </div>  
<% end %>


<%= link_to 'New Status', new_status_path %>
